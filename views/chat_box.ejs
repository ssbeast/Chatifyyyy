<script src="https://cdn.tailwindcss.com"></script>
<section id="user-chat-box" class="w-screen h-screen bg-gray-500 grid place-items-center">
    <div class="bg-white w-full h-full flex flex-col">
        <div id="purple" class="w-full bg-zinc-900 text-white py-3 px-3 flex">
            <div class="flex-1 flex items-center justify-start">
                <span class="font-bold text-lg capitalize"><%= user.name %></span>
            </div>
            <a href="/logout"
               class="bg-white px-5 py-2 text-zinc-900 rounded-md transition border border-transparent hover:bg-transparent hover:text-white hover:border-white hover:font-bold">
                <button class="capitalize">
                    logout
                </button>
            </a>
        </div>
        <ul id="chat-messages-list" class="flex-1 bg-gray-500 p-5">
        </ul>
        <div id="chat-message-input-container" class="bg-grey-300 w-full h-16 flex">
            <input id="chat-message-input" placeholder="Type message here" class="flex-1 px-3 outline-0">
            <button onclick=sendMessage() id="send-message"
                    class="bg-zinc-900 px-5 py-2 text-white transition hover:bg-black">Send
            </button>
        </div>
    </div>
    <script src="https://cdn.socket.io/4.4.1/socket.io.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/js/socket.js"></script>
</section>